<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/calc_side_size"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilSideX"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/size_side"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etSideX"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:imeOptions="flagNavigateNext"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:theme="@style/Theme.MaterialComponents" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilSideY"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/size_another_side"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etSideY"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:imeOptions="flagNavigateNext"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:theme="@style/Theme.MaterialComponents" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilHeight"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/size_height"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:theme="@style/Theme.MaterialComponents" />
        </android.support.design.widget.TextInputLayout>
</LinearLayout>

